<?xml version='1.0' encoding='utf-8'?>
<widget id="com.studioCoders.wellness" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WellnessDuringAPandemic</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <universal-links>
        <host name="com.studioCoders.wellness" scheme="https" />
        <host name="wellnessduringapandemic.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
        <preference name="AndroidLaunchMode" value="singleTask" />
    </universal-links>
</widget>
